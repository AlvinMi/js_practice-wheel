extends ../layout

block content
  h1= article.title
  h5 Write by #{author}
  p= article.body
  hr
  if user && user.id == article.author  
    a.btn.btn-primary.mr-2(href="/articles/" + article.id + "/edit") Modify
    //- 可以使用 jQuery 来获取下面动态 data-id 的内容
    a.btn.btn-danger.delete-article(href="#", data-id=article._id ) Delate 